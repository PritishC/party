<?xml version="1.0"?>
<tryton>
  <data demo="1">
    <menuitem name="Partners" sequence="0" id="menu_partner"/>


    <!--Partner Address -->
    <record model="ir.ui.view" id="view_partner_address_tree">
      <field name="model">partner.address</field>
      <field name="type">tree</field>
      <field name="arch" type="xml">
        <![CDATA[
         <tree string="Partner Addresses">
           <field name="partner" select="1"/>
           <field name="name" select="1"/>
           <field name="type" select="2"/>
           <field name="phone" select="2"/>
           <field name="email" select="2"/>
           <field name="active" select="2" invisible="1"/>
         </tree>
        ]]>
      </field>
    </record>

    <record model="ir.ui.view" id="view_partner_address_form1">
      <field name="model">partner.address</field>
      <field name="type">form</field>
      <field name="arch" type="xml">
        <![CDATA[
          <form string="Partner Addresses" col="6">
            <label name="partner"/>
            <field name="partner" colspan="5"/>
            <label name="name"/>
            <field name="name"/>
            <label name="type"/>
            <field name="type"/>
            <label name="active"/>
            <field name="active" invisible="0"/>
            <label name="street"/>
            <field name="street"/>
            <label name="streetbis"/>
            <field name="streetbis"/>
            <label name="zip"/>
            <field name="zip"/>
            <label name="city"/>
            <field name="city"/>
            <label name="country"/>
            <field name="country" completion="1"/>
            <label name="state"/>
            <field name="state"/>
            <label name="phone"/>
            <field name="phone"/>
            <label name="fax"/>
            <field name="fax"/>
            <label name="mobile"/>
            <field name="mobile"/>
            <label name="email"/>
            <field name="email" widget="email"/>
          </form>
        ]]>
      </field>
    </record>


    <record model="ir.action.act_window" id="action_partner_address_list">
      <field name="name">Partner Addresses</field>
      <field name="type">ir.action.act_window</field>
      <field name="res_model">partner.address</field>
      <field name="view_type">form</field>
    </record>

    <record model="ir.action.act_window.view"
            id="action_partner_address_list_view1">
      <field name="sequence" eval="10"/>
      <field name="view" ref="view_partner_address_tree"/>
      <field name="act_window" ref="action_partner_address_list"/>
    </record>

    <record model="ir.action.act_window.view"
            id="action_partner_address_list_view2">
      <field name="sequence" eval="20"/>
      <field name="view" ref="view_partner_address_form1"/>
      <field name="act_window" ref="action_partner_address_list"/>
    </record>

    <menuitem name="Partner Address" parent="menu_partner"
              sequence="2"
              action="action_partner_address_list"
              id="menu_partner_address_list"/>


    <record model="ir.action.act_window" id="action_partner_address_form">
      <field name="name">Partner Address</field>
      <field name="type">ir.action.act_window</field>
      <field name="res_model">partner.address</field>
      <field name="view_type">form</field>
    </record>

    <record model="ir.action.act_window.view"
            id="action_partner_address_form_view1">
      <field name="sequence" eval="20"/>
      <field name="view" ref="view_partner_address_tree"/>
      <field name="act_window" ref="action_partner_address_form"/>
    </record>

    <record model="ir.action.act_window.view"
            id="action_partner_address_form_view2">
      <field name="sequence" eval="10"/>
      <field name="view" ref="view_partner_address_form1"/>
      <field name="act_window" ref="action_partner_address_form"/>
    </record>

    <menuitem name="New Address"
              parent="menu_partner_address_list"
              action="action_partner_address_form"
              id="menu_partner_address_form"/>






    <!--Partner-->
    <record model="ir.ui.view" id="view_partner_tree">
      <field name="model">partner.partner</field>
      <field name="type">tree</field>
      <field name="priority" eval="8"/>
      <field name="arch" type="xml">
        <![CDATA[
          <tree string="Partners">
            <field name="name" select="1"/>
            <field name="type" select="2"/>
            <field name="lang" select="2"/>
            <field name="website"/>
            <field name="vat" select="1"/>
           <field name="active" select="2"/>
          </tree>
        ]]>
      </field>
    </record>

    <record model="ir.ui.view" id="view_partner_form">
      <field name="model">partner.partner</field>
      <field name="type">form</field>
      <field name="arch" type="xml">
        <![CDATA[
          <form string="Partners">
            <label name="name"/>
            <field name="name"/>
            <notebook colspan="4">
                <page string="General">
                    <field name="addresses" mode="form,tree" colspan="4">
                        <form string="Partner addresses" col="6">
                            <label name="name"/>
                            <field name="name"/>
                            <label name="type"/>
                            <field name="type"/>
                            <label name="active"/>
                            <field name="active" invisible="0"/>
                            <label name="street"/>
                            <field name="street"/>
                            <label name="streetbis"/>
                            <field name="streetbis"/>
                            <label name="zip"/>
                            <field name="zip"/>
                            <label name="city"/>
                            <field name="city"/>
                            <label name="country"/>
                            <field name="country" completion="1"/>
                            <label name="state"/>
                            <field name="state"/>
                            <label name="phone"/>
                            <field name="phone"/>
                            <label name="fax"/>
                            <field name="fax"/>
                            <label name="mobile"/>
                            <field name="mobile"/>
                            <label name="email"/>
                            <field name="email" widget="email"/>
                        </form>
                        <tree string="Partner Addresses">
                            <field name="name"/>
                            <field name="zip"/>
                            <field name="city"/>
                            <field name="country"/>
                            <field name="active" invisible="1"/>
                        </tree>
                    </field>
                    <label name="lang"/>
                    <field name="lang" widget="selection"/>
                    <label name="active"/>
                    <field name="active"/>
                    <separator string="Categories" colspan="4"/>
                    <field name="categories" colspan="4"/>
                </page>
            </notebook>
          </form>
        ]]>
      </field>
    </record>

    <record model="ir.action.act_window" id="action_partner_list">
      <field name="name">Partners</field>
      <field name="type">ir.action.act_window</field>
      <field name="res_model">partner.partner</field>
      <field name="view_type">form</field>
    </record>
    <record model="ir.action.act_window.view" id="action_partner_list_view1">
      <field name="sequence" eval="10"/>
      <field name="view" ref="view_partner_tree"/>
      <field name="act_window" ref="action_partner_list"/>
    </record>
    <record model="ir.action.act_window.view" id="action_partner_list_view2">
      <field name="sequence" eval="20"/>
      <field name="view" ref="view_partner_form"/>
      <field name="act_window" ref="action_partner_list"/>
    </record>
    <menuitem name="Partners" parent="menu_partner"
              action="action_partner_list"
              sequence="1"
              id="menu_partner_list"/>



    <record model="ir.action.act_window" id="action_partner_form">
      <field name="name">Partners</field>
      <field name="type">ir.action.act_window</field>
      <field name="res_model">partner.partner</field>
      <field name="view_type">form</field>
    </record>
    <record model="ir.action.act_window.view" id="action_partner_form_view1">
      <field name="sequence" eval="20"/>
      <field name="view" ref="view_partner_tree"/>
      <field name="act_window" ref="action_partner_form"/>
    </record>
    <record model="ir.action.act_window.view" id="action_partner_form_view2">
      <field name="sequence" eval="10"/>
      <field name="view" ref="view_partner_form"/>
      <field name="act_window" ref="action_partner_form"/>
    </record>
    <menuitem name="New Partner"
              action="action_partner_form"
              parent="menu_partner_list"
              id="menu_partner_form"/>





    <!--Categories-->
    <record model="ir.ui.view" id="view_partner_category_form">
      <field name="model">partner.category</field>
      <field name="type">form</field>
      <field name="arch" type="xml">
        <![CDATA[
          <form string="Partner categories">
            <label name="name"/>
            <field name="name"/>
            <label name="active"/>
            <field name="active" invisible="0"/>
            <label name="parent"/>
            <field name="parent"/>
          </form>
        ]]>
      </field>
    </record>


    <record model="ir.ui.view" id="view_partner_category_tree">
      <field name="model">partner.category</field>
      <field name="type">tree</field>
      <field name="field_childs">childs</field>
      <field name="arch" type="xml">
        <![CDATA[
          <tree string="Partner Categories">
            <field name="name" select="1"/>
           <field name="active" select="2" invisible="1"/>
          </tree>
        ]]>
      </field>
    </record>




    <record model="ir.action.act_window" id="action_partner_by_category">
      <field name="name">Partners</field>
      <field name="res_model">partner.partner</field>
      <field name="view_type">form</field>
      <field name="domain">[('categories','child_of', [active_id])]</field>
    </record>


    <record model="ir.action.keyword" id="keyword_partner_by_category">
      <field name="keyword" eval="'tree_open'"/>
      <field name="model">partner.category,0</field>
      <field name="action" ref="action_partner_by_category"/>
    </record>


    <record model="ir.action.act_window" id="action_partner_category">
      <field name="name">Partner categories</field>
      <field name="type">ir.action.act_window</field>
      <field name="res_model">partner.category</field>
      <field name="view_type">tree</field>
      <field name="domain">[('parent','=',False)]</field>
    </record>
    <record model="ir.action.act_window.view"
            id="action_partner_category_tree">
      <field name="sequence" eval="10"/>
      <field name="view" ref="view_partner_category_tree"/>
      <field name="act_window" ref="action_partner_category"/>
    </record>
    <record model="ir.action.act_window.view"
            id="action_partner_category_form">
      <field name="sequence" eval="20"/>
      <field name="view" ref="view_partner_category_form"/>
      <field name="act_window" ref="action_partner_category"/>
    </record>
    <menuitem
        name="Categories"
        parent="menu_partner"
        sequence="3"
        action="action_partner_category"
        id="menu_partner_category"/>


    <record model="ir.action.act_window" id="action_partner_category_edit">
      <field name="name">Partner categories</field>
      <field name="type">ir.action.act_window</field>
      <field name="res_model">partner.category</field>
      <field name="view_type">form</field>
    </record>
    <record model="ir.action.act_window.view"
            id="action_partner_category_tree_edit">
      <field name="sequence" eval="10"/>
      <field name="view" ref="view_partner_category_tree"/>
      <field name="act_window" ref="action_partner_category_edit"/>
    </record>

    <record model="ir.action.act_window.view"
            id="action_partner_category_form_edit">
      <field name="sequence" eval="20"/>
      <field name="view" ref="view_partner_category_form"/>
      <field name="act_window" ref="action_partner_category_edit"/>
    </record>
    <menuitem name="Edit Categories" parent="menu_partner_category"
              action="action_partner_category_edit"
              id="menu_partner_category_list"/>


    <record model="ir.action.act_window" id="action_partner_category_new">
      <field name="name">New Category</field>
      <field name="type">ir.action.act_window</field>
      <field name="res_model">partner.category</field>
      <field name="view_type">form</field>
    </record>
    <record model="ir.action.act_window.view"
            id="action_view_partner_category_new">
      <field name="sequence" eval="20"/>
      <field name="view" ref="view_partner_category_tree"/>
      <field name="act_window" ref="action_partner_category_new"/>
    </record>

    <record model="ir.action.act_window.view"
            id="action_view_partner_category_form">
      <field name="sequence" eval="10"/>
      <field name="view" ref="view_partner_category_form"/>
      <field name="act_window" ref="action_partner_category_new"/>
    </record>
    <menuitem name="New category" parent="menu_partner_category"
              action="action_partner_category_new"
              id="menu_partner_category_form"/>



  </data>
</tryton>
